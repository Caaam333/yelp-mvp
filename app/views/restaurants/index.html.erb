<div class= "container d-flex flex-column mt-3 text-center" > 
  <h1>Restaurants</h1>
  <ul class="list">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <% end %>
  </ul>
  <%= link_to "new", new_restaurant_path, class:"btn border-primary" %>
</div>